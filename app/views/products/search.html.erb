<%= render "share/products_sidebar" %>
<%= javascript_include_tag "jquery", "jquery-ui","jquery_ujs","underscore", "backbone", "products", "brands"%>
<div class="zy_right">
  <%= render "share/product_position"%>
  <script>
      <!--
      /*tab切换脚本*/
      function setTab(name,cursel,n){
          /*参数意义:name为标签id标识,即不带数字的,cursel为标签数字,n为一共有几个标签*/
          for(i=1;i<=n;i++){
              var menu=document.getElementById(name+i); /*循环取得所有标签*/
              var con=document.getElementById("tab_"+name+"_"+i); /*循环取得所有的内容块*/
              menu.className=i==cursel?"current":""; /*判断自身的数字是否等于current*/
              con.style.display=i==cursel?"block":"none"; /*如果是则显示出当前标签所应的内容块,否则隐藏*/
          }
      }
      //-->
  </script>

  <div id="find_con">
    <div class="fc_title">
      <h2><a href="javascript:void(0)" id="two1" onmouseover="setTab('two',1,3)"class="current">按尺寸查找</a> <a href="javascript:void(0)" id="two2" onmouseover="setTab('two',2,3)">按车辆查找</a> <a href="javascript:void(0)" id="two3" onmouseover="setTab('two',3,3)"class="last">按花纹查找</a>
        <div class="clear"></div>
      </h2>
    </div>
    <div class="fc_con">
      <div class="home_pro1" id="tab_two_1" >
        <%= form_tag "/searchs" do  -%>
            <div class="xz_pro2">
              <%= render "product_search_form" %>
            </div>
            <div class="btn_pro"><input type="submit" class="searchbtn2" value="查询轮胎" /></div>
        <% end -%>
      </div>

      <div class="home_pro1" id="tab_two_2" style="display:none;">
        <%= form_tag "/searchs?type=brand" do  -%>
            <div class="xz_pro2">
              <%= render "brand_search_form" %>
            </div>
            <div class="btn_pro"><input type="submit" class="searchbtn2" value="查询轮胎" /></div>
        <% end -%>
      </div>

      <div class="home_pro1" id="tab_two_3" style="display:none;">
        <%= form_tag "/searchs?type=brand" do  -%>
            <div class="xz_pro2">
              <%= render "name_search_form" %>
            </div>
            <div class="btn_pro"><input type="submit" class="searchbtn2" value="查询轮胎" /></div>
        <% end -%>
      </div>

    </div>
  </div>

</div>




 