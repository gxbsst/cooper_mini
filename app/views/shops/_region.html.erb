<div id="region" >
<table cellpadding="0" cellspacing="0">
    <tr>
      <td class="td">省份</td>
      <td>
		<span id="province">
			<%= select_tag "region[province]", options_from_collection_for_select(Store.province_collection, 'id', 'provice', params[:region][:province]), :prompt => '-请选择-', :class => "select" %>	
		</span>
      </td>
      <td class="td"></td>
      <td>
	
		<span id="district" style="display: none">
		<%= select_tag "region[district]", options_from_collection_for_select([], 'id', 'city'), :prompt => '-请选择-', :class => "select" %>		
		</span>
		
      </td>
      <td rowspan="2"><input type="submit" class="searchbtn" value="查询" /></td>
    </tr>
    <tr>
      <td class="td">城市</td>
      <td>
		<span id="city">
			<%= select_tag "region[city]", options_for_select([]), :prompt => '-请选择-', :class => "select" %>	
		</span>
      </td>
    </tr>
  </table>

</div>
