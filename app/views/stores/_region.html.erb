<div id="region" >
<table cellpadding="0" cellspacing="0">
    <tr>
      <td class="td">省份</td>
      <td>
		<span id="province">
			<%= select_tag "region[province]", options_for_select(Store.province_collection), :prompt => '-请选择-', :class => "select" %>	
		</span>
      </td>
      <td class="td"></td>
      <td>
	
		<span id="district" style="display: none">
		<%= select_tag "region[district]", options_for_select([]), :prompt => '-请选择-', :class => "select" %>		
		</span>
		
      </td>
      <td rowspan="2"><input type="submit" class="searchbtn" value="查询" /></td>
    </tr>
    <tr>
      <td class="td">城市</td>
      <td>
		<span id="city">
			<%= select_tag "region[city]", options_for_select([]), :prompt => '-请选择-', :class => "select" %>	
		</span>
      </td>
      <td class="td">店铺类型</td>
      <td>
		<%= select_tag "region[shop_type]", options_for_select([["嘉车坊", "CPC"],["店中店", "CC"],["替换中心", "CTCC"],["店招店", "CSS+"],["招牌店", "CSS"],["独立授权店", "INDENPENDENT"],["其他", "OTHERS"]]), :prompt => '-请选择-', :class => "select" %>	
      </td>
    </tr>
  </table>

</div>
