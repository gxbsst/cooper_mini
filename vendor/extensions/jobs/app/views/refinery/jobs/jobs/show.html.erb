<% content_for :body_content_title do %>
  <%= @job.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @job.title %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @job.address %>
    </p>
  </section>
  <section>
    <h1>Degree</h1>
    <p>
      <%=raw @job.degree %>
    </p>
  </section>
  <section>
    <h1>Experience</h1>
    <p>
      <%=raw @job.experience %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @job.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="jobs">
      <% @jobs.each do |job| %>
        <li>
          <%= link_to job.title, refinery.jobs_job_path(job) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
